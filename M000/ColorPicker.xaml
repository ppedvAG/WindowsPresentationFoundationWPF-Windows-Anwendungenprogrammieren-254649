<Window x:Class="M000.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:M000"
        Title="ColorPicker" Height="300" Width="300"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
		SizeToContent="Height"
		ResizeMode="NoResize">
    <StackPanel Margin="5">
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="R: "
					   Foreground="Red"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=RSlider, Path=Value}"
					 DockPanel.Dock="Right"
					 TextAlignment="Center"
					 Width="30"/>
			<Slider Minimum="0"
					Maximum="255"
					Name="RSlider"
					Margin="5, 0"
					IsSnapToTickEnabled="True"
					TickFrequency="1"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="G: "
					   Foreground="Green"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=GSlider, Path=Value}"
					 DockPanel.Dock="Right"
					 TextAlignment="Center"
					 Width="30"/>
			<Slider Minimum="0"
					Maximum="255"
					Name="GSlider"
					Margin="5, 0"
					IsSnapToTickEnabled="True"
					TickFrequency="1"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="B: "
					   Foreground="Blue"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=BSlider, Path=Value}"
					 DockPanel.Dock="Right"
					 TextAlignment="Center"
					 Width="30"/>
			<Slider Minimum="0"
					Maximum="255"
					Name="BSlider"
					Margin="5, 0"
					IsSnapToTickEnabled="True"
					TickFrequency="1"/>
		</DockPanel>
		<DockPanel Margin="0, 0, 0, 5">
			<TextBlock Text="A: "
					   Foreground="Black"
					   Width="15"
					   DockPanel.Dock="Left"/>
			<TextBox Text="{Binding ElementName=ASlider, Path=Value}"
					 DockPanel.Dock="Right"
					 TextAlignment="Center"
					 Width="30"/>
			<Slider Minimum="0"
					Maximum="255"
					Value="255"
					Name="ASlider"
					Margin="5, 0"
					IsSnapToTickEnabled="True"
					TickFrequency="1"/>
		</DockPanel>
		<TextBlock Text="{Binding ElementName=Rect, Path=Fill, StringFormat='Picked Color: {0}'}" TextAlignment="Center" Margin="0, 5"/>
		<Rectangle Width="150" Height="150" Stroke="Black" StrokeThickness="2" Name="Rect" Margin="0, 0, 0, 10">
			<Rectangle.Fill>
				<MultiBinding>
					<Binding ElementName="RSlider" Path="Value"/>
					<Binding ElementName="GSlider" Path="Value"/>
					<Binding ElementName="BSlider" Path="Value"/>
					<Binding ElementName="ASlider" Path="Value"/>

					<MultiBinding.Converter>
						<conv:RGBAConverter/>
					</MultiBinding.Converter>
				</MultiBinding>
			</Rectangle.Fill>
		</Rectangle>
    </StackPanel>
</Window>
