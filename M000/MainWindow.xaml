<Window x:Class="M000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="300"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
		SizeToContent="Height"
		ResizeMode="NoResize"
		FontSize="14">
	<Window.Background>
		<LinearGradientBrush>
			<GradientStop Offset="0" Color="Violet"/>
			<GradientStop Offset="1" Color="LightGreen"/>
		</LinearGradientBrush>
	</Window.Background>
	<StackPanel Margin="5">
		<UniformGrid Columns="2">
			<TextBlock Text="Vorname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2">
			<TextBlock Text="Nachname: "/>
			<TextBox/>
		</UniformGrid>
		<UniformGrid Columns="2">
			<TextBlock Text="Geburtsdatum: "/>
			<DatePicker/>
		</UniformGrid>
		<UniformGrid Columns="2">
			<TextBlock Text="Verheiratet: "/>
			<CheckBox/>
		</UniformGrid>
		<UniformGrid Columns="2">
			<TextBlock Text="Lieblingsfarbe: "/>
			<ComboBox>
				<ComboBoxItem Content="Rot" Foreground="Red"/>
				<ComboBoxItem Content="Blau" Foreground="Blue"/>
				<ComboBoxItem Content="Grün" Foreground="Green"/>
				<ComboBoxItem Content="Gelb" Foreground="Yellow"/>
			</ComboBox>
		</UniformGrid>
		<UniformGrid Columns="2">
			<TextBlock Text="Geschlecht: "/>
			<StackPanel>
				<RadioButton GroupName="G" Content="M"/>
				<RadioButton GroupName="G" Content="W"/>
				<RadioButton GroupName="G" Content="D"/>
			</StackPanel>
		</UniformGrid>
		<UniformGrid Columns="2" Margin="50, 0, 0, 0">
			<Button Content="OK"/>
			<Button Content="Abbrechen"/>
		</UniformGrid>
    </StackPanel>
</Window>
