<Application x:Class="M006.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M006"
             StartupUri="MainWindow.xaml">
	<!--In Application.Resources werden globale Ressourcen definiert-->
	<!--Diese sind im gesamten Projekt nutzbar (alle Windows, UserControls, ...)-->
	<Application.Resources>
		<!--<TextBlock Text="Welt" x:Key="WeltTB"/>-->
		
		<!--Einzelne RDs können per eine Zeile eingebunden werden-->
		<!--<ResourceDictionary Source="/Extern.xaml"/>-->
		
		<!--Mehrere RDs müssen per MergedDictionaries eingebunden werden-->
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Extern.xaml"/>
				<ResourceDictionary Source="/Extern.xaml"/>
				<ResourceDictionary Source="/Extern.xaml"/>
				<ResourceDictionary Source="/PresentationFramework.Classic;component/themes/Classic.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
